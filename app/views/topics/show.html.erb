<div class="container-fluid">
	<div class="row-fluid">
		<div class="span12">
			
			<div class="page-header">
				<h1>
					<%= @topic.name %>
				</h1>
			</div>
			<p>
				<%= @topic.content %>
			</p>
		</div>
	</div>
	
	<% @ms.each do |m| %>
	<div class="row">
		<div class="span2">	
			<div class="span6">
				<%= gravatar_for m.user %>	
			</div>
			<div class="span6">
				<%= m.user.name %>
			</div>
		</div>
		<div class="span6">
			<%= m.content%>
		</div>
		<div class="span4">
			<span class="badge"><%= m.created_at %></span>
		</div>
	</div>
	<% end %>
			
			
	<div class="span12">
		<%= form_for("messages", controller: "topics", action: "new_messages") do |f| %>
		<%= f.label :content %>
		<%= f.text_area :content %>
			
		<%= f.submit "添加回复", class: "btn btn-large btn-primary" %>
		<%= link_to raw("回到项目"), 
		          @project, 
		          class: "btn",
		          method: :get %>
		<% end %>
	</div>
	
				
				
</div>
		
</div>
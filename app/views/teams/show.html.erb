<% provide(:title, @team.name) %>

<div class="container-fluid">
	<div class="row-fluid">
		<div class="span12">
			<ul class="thumbnails">
				<li class="span4">
					<div class="thumbnail">
						
						<%= link_to image_tag("team.png", alt: "team") %>
						<div class="caption">
							<h3>
								团队构成
							</h3>
							<p>
								只有项目成员才能访问该项目的信息。
							</p>
							<p>
								
								<%= link_to raw("查看"), 
								          show_members_team_path, 
								          class: "btn btn-primary",
								          method: :get %>
								
								
 								<%= link_to raw("添加"),
 								          add_members_team_path, 
 								          class: "btn",
 								          method: :get %>
													
							</p>
						</div>
					</div>
				</li>
				<li class="span4">
						<div class="thumbnail">
							<%= link_to image_tag("project.png", alt: "project", width: 220, height: 210) %>
							<div class="caption">
								<h3>
									项目列表
								</h3>
								<p>
									在这里放着团队的所有项目
								</p>
								<p>
									<%= link_to raw("查看"), 
									          show_projects_team_path, 
									          class: "btn btn-primary",
									          method: :get %>
								
								
	 								<%= link_to raw("添加"),
	 								          add_projects_team_path, 
	 								          class: "btn",
	 								          method: :get %>
								</p>
							</div>
						</div>
					</li>
					<li class="span4">
						<div class="thumbnail">
							<%= link_to image_tag("team_log.png", alt: "log", width: 220, height: 210) %>
							<div class="caption">
								<h3>
									团队日志
								</h3>
								<p>
									存放创建项目、添加成员等操作的记录
								</p>
								<p>
									<%= link_to raw("查看"), 
									          show_logs_team_path, 
									          class: "btn btn-primary",
									          method: :get %>
								
								</p>
							</div>
						</div>
					</li>
			</ul>
		</div>
	</div>
</div>
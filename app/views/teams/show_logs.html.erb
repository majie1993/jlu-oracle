<% provide(:title, "Logs") %>

<div class="container-fluid">
	<div class="row-fluid">
		<div class="span12">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>
							事件
						</th>
						<th>
							时间
						</th>
					</tr>
				</thead>
				<tbody>
					<% @logs.each do |log| %>
					<tr>
						<td>
							<%= log.content %>
						</td>
						<td>
							<%= log.created_at %>
						</td>
					</tr>
					<% end %>
					
				</tbody>
			</table>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="span12">
			<div class="page-header">
				<h1>
					讨论区<small>思想的碰撞 <%= link_to raw("发帖"), new_topics_project_path, class: "btn btn-primary", method: :get %></small>
				</h1>
			</div>
		</div>
	</div>
	
	<% @topics.each do |topic| %>
	<div class="row">
		<div class="span2">
			<div class="row">
				<div class="span6">
					<%= gravatar_for topic.user %>
				</div>
				<div class="span6">
					<%= link_to topic.user.name, topic.user %>
				</div>
			</div>
		</div>
		<div class="span6">
			<h2>
				<%= link_to topic.name, project_topic_url(params[:id], topic.id) %>
			</h2>
			<p>
				<%= topic.content %>
			</p>
			
		</div>
		<div class="span4">
			<span class="badge"><%= topic.messages.size %></span> <span class="label"><%= topic.created_at %></span>
		</div>
	</div>
	<% end %>
	
	<%= link_to raw("回到项目"), 
	          @project, 
	          class: "btn btn-primary",
	          method: :get %>
	
	
</div>
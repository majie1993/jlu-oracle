<% provide(:title, 'Add new Topic') %>
<h1>New Topic</h1>

<div class="row">
	<div class="span6 offset3">
				
    <%= form_for("topics", controller: "projects", action: "new_topics") do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name %>
			<%= f.label :content %>
			<%= f.text_area :content %>
      <%= f.submit "Create", class: "btn btn-large btn-primary" %>
    <% end %>
	</div>
</div>

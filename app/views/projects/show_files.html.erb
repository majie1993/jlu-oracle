<div class="container">
	<div class="row">
		<div class="span12">
			<%= form_for "uploaders", :html => {:multipart => true} do |f| %>
			<%= f.file_field :file %>
			<%= f.submit "Upload", class: "btn"%>
			<% end %>
			<%= link_to raw("回到项目"), 
			          @project, 
			          class: "btn btn-primary",
			          method: :get %>
		</div>
	</div>
	<div class="row">
		<% @uploaders.each do |up| %>
		<div class="span3">
			<div class="hero-unit">
				<h1>
					<% if up.file.url.split(".").last == "doc" %>
					<%= link_to image_tag("doc.png", alt: "doc", width: 230, height: 230), up.file.url %>
					<% end %>
					<% if  up.file.url.split(".").last == "pdf" %>
					<%= link_to image_tag("pdf.png", alt: "pdf", width: 230, height: 230), up.file.url %>
					<% end %>
					<% if  up.file.url.split(".").last == "ppt" %>
					<%= link_to image_tag("ppt.png", alt: "ppt", width: 230, height: 230), up.file.url %>
					<% end %>
					
					
				</h1>
				<p>
					<%= up.file.url.split("/").last %>
				</p>			
			</div>		
		</div>
		<% end %>
	</div>
</div>